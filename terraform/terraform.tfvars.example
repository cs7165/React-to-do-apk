# Terraform Variables Override File
# Copy this file to terraform.tfvars and update with your values

aws_region = "us-east-1"
environment = "prod"
app_name = "todo-app"
instance_type = "t3.micro"
instance_count = 1

# REQUIRED: Set your EC2 Key Pair name
# Create a key pair first: aws ec2 create-key-pair --key-name my-key-pair --region us-east-1
key_pair_name = "your-key-pair-name"

# Optional: Restrict SSH access to specific IPs
# Default allows all IPs (0.0.0.0/0) - CHANGE THIS FOR PRODUCTION
allowed_ssh_ips = ["0.0.0.0/0"]

vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
